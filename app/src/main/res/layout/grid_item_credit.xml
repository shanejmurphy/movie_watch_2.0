<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="120dp"
  android:layout_height="220dp"
  card_view:cardCornerRadius="@dimen/card_item_corner_radius"
  tools:showIn="fragment_movie_credits">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/creditProfileImage"
      android:layout_width="120dp"
      android:layout_height="155dp"
      android:scaleType="centerCrop"
      android:src="@drawable/poster_default"/>

    <TextView
      android:id="@+id/creditProfileName"
      style="@style/title_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:paddingLeft="@dimen/padding_miniature"
      android:paddingRight="@dimen/padding_miniature"
      tools:text="Samuel L. Jackson"/>

    <TextView
      android:id="@+id/creditProfileCharacter"
      style="@style/subtitle_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="Character Name"
      android:gravity="start"
      android:singleLine="true"
      android:paddingLeft="@dimen/padding_miniature"
      android:paddingRight="@dimen/padding_miniature"
      android:textColor="@color/secondary_text"
      android:textSize="@dimen/text_size_tiny"
      android:textStyle="italic"/>

  </LinearLayout>

</android.support.v7.widget.CardView>