<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:layout_marginLeft="@dimen/padding_tiny"
  android:layout_marginRight="@dimen/padding_tiny"
  android:layout_marginTop="@dimen/padding_miniature"
  android:layout_marginBottom="@dimen/padding_miniature"
  card_view:cardCornerRadius="@dimen/card_item_corner_radius"
  card_view:contentPadding="@dimen/card_item_content_padding"
  tools:showIn="fragment_showtimes">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/theaterTitle"
      style="@style/title_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:singleLine="true"
      tools:text="Omniplex - Dublin Swan / Rathmines"/>

    <TextView
      android:id="@+id/theaterAddress"
      style="@style/subtitle_text"
      android:textSize="@dimen/text_size_tiny"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/theaterTitle"
      android:singleLine="true"
      tools:text="Fonthill Road - Clondalkin, Liffey Valley Road, Lucan, Co. Dublin, Ireland"/>

    <View android:id="@+id/showtimeDivider"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/black"
      android:layout_below="@+id/theaterAddress"/>

    <TextView
      android:id="@+id/theaterTimes"
      style="@style/subtitle_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/showtimeDivider"
      tools:text="10:00   11:20   13:45   15:00   17:40   18:15   19:50   21:00   22:00"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>