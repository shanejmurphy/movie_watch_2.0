	        android:text="12:15‎  ‎14:15‎  ‎15:40‎  ‎19:30‎  ‎20:40‎  ‎21:00‎  22:00  22:15"
	        android:textSize="18sp"
	        android:layout_marginLeft="4dip"
	        android:layout_marginTop="1dip"
	    	android:paddingBottom="6dip"/>
	    	
	    	
